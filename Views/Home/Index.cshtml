@{
    ViewData["Title"] = "Abonelik İşlemleri";
}
<div class="container mt-5">
    <h2 class="mb-5 text-center fw-bold">Hangi işlemi yapmak istiyorsunuz?</h2>
    <div class="row justify-content-center g-4">
        <div class="col-md-8">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <form method="get" action="/Chat/Start">
                                <input type="hidden" name="scenario" value="FaturaOdemesi" />
                                <button type="submit" class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-receipt"></i> Fatura Ödemesi
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <form method="get" action="/Chat/Start">
                                <input type="hidden" name="scenario" value="AbonelikIptali" />
                                <button type="submit" class="btn btn-danger btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-x-circle"></i> Abonelik İptali
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <form method="get" action="/Chat/Start">
                                <input type="hidden" name="scenario" value="FaturaItirazi" />
                                <button type="submit" class="btn btn-warning btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-exclamation-diamond"></i> Fatura İtirazı
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <form method="get" action="/Chat/Start">
                                <input type="hidden" name="scenario" value="ElektrikArizasi" />
                                <button type="submit" class="btn btn-info btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-lightning-charge"></i> Elektrik Arızası
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <form method="get" action="/Chat/Start">
                                <input type="hidden" name="scenario" value="Diger" />
                                <button type="submit" class="btn btn-secondary btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-three-dots"></i> Diğer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title mb-3"><i class="bi bi-chat-dots"></i> Serbest Sohbet</h5>
                    <p class="card-text">Konudan bağımsız, GPT ile sohbet başlatmak için tıklayın.</p>
                    <form method="get" action="/Chat/Start">
                        <input type="hidden" name="scenario" value="SerbestSohbet" />
                        <button type="submit" class="btn btn-success btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-robot"></i> Sohbet Et
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
