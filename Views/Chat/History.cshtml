@{
    ViewData["Title"] = "Konuşma Geçmişi";
    var history = ViewBag.History as string ?? "";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 p-4">
                <h2 class="mb-4">Konuşma Geçmişi</h2>
                <pre style="white-space: pre-wrap; background: #f8fafc; border-radius: 1rem; padding: 1.5rem; min-height: 200px;">@history</pre>
            </div>
        </div>
    </div>
</div> 