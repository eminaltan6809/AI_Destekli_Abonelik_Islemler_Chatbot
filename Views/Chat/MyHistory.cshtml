@model List<AI_Destekli_Abonelik_Chatbot.Models.ChatHistory>
@{
    ViewData["Title"] = "Chat Geçmişim";
}
<div class="container mt-5">
    <h2 class="mb-4">Chat Geçmişim</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Senaryo</th>
                <th>Oluşturulma</th>
                <th>Chat Geçmişi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Scenario</td>
                    <td>@item.CreatedAt.ToString("g")</td>
                    <td><pre>@item.History</pre></td>
                </tr>
            }
        </tbody>
    </table>
</div> 